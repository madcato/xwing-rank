<h1><%= t('listingPlayers')%></h1>

<%= link_to t('newPlayer'), new_player_path, class: "btn btn-primary btn-lg pull-right", role:"button" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Player.human_attribute_name(:firtName) %></th>
			<th><%= Player.human_attribute_name(:lastName) %></th>
      <th><%= Player.human_attribute_name(:ranking) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.firstName %></td>
				<td><%= player.lastName %></td>
        <td><%= player.ranking %></td>
        <td><%= link_to I18n.t('edit'), edit_player_path(player), class: "btn btn-default btn-xs", role:"button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('newPlayer'), new_player_path, class: "btn btn-primary btn-lg pull-right", role:"button" %>
