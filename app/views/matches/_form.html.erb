<%= form_for([@tourney, @round, @match], role: "form") do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="from_group">
    <%= f.label :player1_id %><br>
	<%= select("match", "player1_id", collectPlayersForTournmanet(@tourney), {include_blank: 'None'}, class: "form-control") %>
  </div>
  <div class="form_group">
    <%= f.label :player2_id %><br>
	<%= select("match", "player2_id", Player.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}, class: "form-control") %>
  </div>
  <div class="form_group">
    <%= f.label :winner %>
	<input id="match_winner_id_1" name="match[winner]" type="radio" value="1" class="form-control" />
	<label for="match_winner_id_1">Player 1</label>
	<input id="match_winner_id_2" name="match[winner]" type="radio" value="2" class="form-control"/>
	<label for="match_winner_id_2">Player2</label>

  </div>
  <div class="form_group">
  
    <%= f.hidden_field :round_id, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-default" %>
<% end %>
	